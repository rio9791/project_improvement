<%= content_for :bottom_scripts do %>
  <script type="text/javascript">
    $(".submit_button").click(function(){
      $.ajax({
      	type: "put",
      	url: "<%= dashboard_path %>",
      	dataType: "json",
      	data: {id: $('#user_id').val(), first_name: $('#user_first_name').val(), last_name: $('#user_last_name').val(), email: $('#user_email').val(), password: $('#user_password').val(), password_confirmation: $('#user_password_confirmation').val(), avatar: $('#user_avatar').val()},
      	success:function(response){
      	  if (response){
      	  	alert("User successfully updated");
      	  	window.location.replace("<%= dashboard_index_path %>");
      	  }else{
            $(".validation").show();
      	  }
      	}
      })
    });
  </script>
<%end%>