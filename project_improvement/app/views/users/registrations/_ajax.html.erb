<%= content_for :bottom_scripts do %>
  <script type="text/javascript">
    $(".submit_button").click(function(){
      $.ajax({
      	type: "post",
      	url: "<%= user_registration_path %>",
      	data: {email: $('#user_email').val(), password: $('#user_password').val(), password_confirmation: $('#user_password_confirmation').val(), first_name: $('#user_first_name').val(), last_name: $('#user_last_name').val()},
      	dataType: "json",
      	success:function(response){
      	  if (response){
      	  	alert("Sign up successfully!");
      	  	window.location.replace("<%= home_index_path %>");
      	  }else{
      	  	$('.validation').show();
      	  }
      	}
      })
    });
  </script>
<%end%>